# ============================================
# Competitor Intelligence Agent - Environment Variables
# ============================================
# Copia este archivo a .env y configura tus valores reales
# cp .env.example .env

# ============================================
# Base de Datos PostgreSQL (Supabase) - REQUERIDO
# ============================================
SUPABASE_DB_URL=postgresql://user:password@host:port/database

# ============================================
# LLM Provider - ConfiguraciÃ³n Principal
# ============================================
# Opciones: "openai" o "ollama"
LLM_PROVIDER=openai

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# Modelos OpenAI (opcionales, con valores por defecto)
OPENAI_MODEL_EXTRACTION=gpt-4.1
OPENAI_MODEL_SCORING=gpt-4.1
OPENAI_MODEL_INSIGHTS=gpt-4.1
OPENAI_MODEL_QUICK=gpt-4.1
OPENAI_MODEL_CHAT=gpt-4.1

# ConfiguraciÃ³n de Chat
OPENAI_CHAT_MAX_TOKENS=3000

# ============================================
# Ollama Configuration (Alternativa Local)
# ============================================
# Solo necesario si LLM_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3.1:8b

# ============================================
# MongoDB (Opcional - para RAG y Chat History)
# ============================================
# Habilitar MongoDB (true/false)
MONGODB_ENABLED=false

# URI de conexiÃ³n MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=CompetitorIntelligenceAgent

# ============================================
# Embeddings (Opcional)
# ============================================
# Provider para embeddings: "openai" o "fallback"
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ============================================
# Web Scraping - Playwright
# ============================================
# Habilitar scraper dinÃ¡mico con Playwright (true/false)
USE_DYNAMIC_SCRAPER=true

# Timeouts de Playwright (en segundos)
PLAYWRIGHT_TIMEOUT=90
PLAYWRIGHT_PRICING_TIMEOUT=120

# ============================================
# API Server (FastAPI)
# ============================================
PORT=8000

# ============================================
# Frontend (Next.js)
# ============================================
# URL del backend API (usado en el frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# URL del sitio (opcional, para metadata)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
